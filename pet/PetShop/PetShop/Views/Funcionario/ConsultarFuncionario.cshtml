
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ação</th>
                        <th>Funcionário</th>
                        <th>Telefone</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.ListarFuncionarios)
                    {
                        <tr>
                            <td>
                                <a href="/Funcionario/AlterarFuncionario?id=@item.IdFuncionario" class="btn btn-warning btn-xs">Alterar</a>
                            </td>
                            <td>@item.Nome</td>
                            <td>@item.Telefone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>